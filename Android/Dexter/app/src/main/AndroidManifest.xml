<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="theo.dexter">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".DexterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.RobotCar">
        <activity
            android:name="theo.dexter.ui.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="theo.dexter.ui.activity.PlayActivity"
            android:label="@string/title_activity_play"
            android:parentActivityName="theo.dexter.ui.activity.MainActivity"
            android:theme="@style/Theme.RobotCar"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="theo.dexter.ui.activity.MainActivity" />
        </activity>

        <service android:name="theo.dexter.bluetooth.BluetoothService"></service>

    </application>

</manifest>
