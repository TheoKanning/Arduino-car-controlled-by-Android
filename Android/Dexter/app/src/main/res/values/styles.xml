<resources>

    <!-- Base application theme. -->
    <style name="Theme.RobotCar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.RobotCar.NoActionBar">

    </style>

    <!-- Button Styles -->
    <style name="Button" parent="Widget.AppCompat.Button"/>

    <style name="Button.RobotCar">
    </style>

    <!-- TextAppearance styles -->
    <style name="TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.RobotCar">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.RobotCar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.RobotCar.Subtitle">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.RobotCar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.RobotCar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
