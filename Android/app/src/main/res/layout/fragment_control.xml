<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="theo.dexter.ui.fragment.ControlFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_control_drive"
        android:id="@+id/start"
        android:background="@color/colorStart"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_control_park"
        android:id="@+id/stop"
        android:background="@color/colorStop"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

</RelativeLayout>
